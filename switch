#include <iostream>
#include <iomanip>

using namespace std;

int main()
{
	int choice, months, ans;
	cout << "Please enter your choice for this menu: " << endl;

	do {
		cout << "1- Adult Gym - price is RM50" << endl;
		cout << "2- Kids Gym - price is RM20" << endl;
		cout << "3- Senior citizen Gym - free" << endl;
		cout << "4- Exit" << endl;
		cin >> choice;


		//how can we repeat this menu for switch case

		switch (choice)
		{
		case 1: cout << "RM50 * " << months << "= " << ans << endl;
			break;
		case 2: cout << "Price is RM20" << endl;
			break;
		case 3: cout << "Free!" << endl;
			break;
		case 4: cout << "Thank you" << endl;
			break;
		default: cout << "please enter number between 1-3" << endl;
		}

	} while (choice != 4);



	cout << "Thank you" << endl;

	return 0;
}
